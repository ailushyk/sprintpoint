{
  "singleQuote": true,
  "semi": false,
  "importOrder": [
    "<TYPES>",
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "<THIRD_PARTY_MODULES>",
    "^@/lib/(.*)$",
    "^@/app/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^@/data/(.*)$",
    "^[./]"
  ],
  "importOrderTypeScriptVersion": "5.0.0",
  "tailwindFunctions": [
    "clsx",
    "cva"
  ],
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}