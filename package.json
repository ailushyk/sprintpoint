{
  "name": "easypoker",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:app": "turbo run build --filter=poker-app... --filter=server...",
    "build:client": "turbo run build --filter=poker-app",
    "dev": "turbo run dev",
    "dev:app": "turbo run dev --filter=poker-app... --filter=server...",
    "dev:client": "turbo run dev --filter=poker-app...",
    "dev:server": "turbo run dev --filter=server...",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --cache"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@turbo/gen": "^1.10.12",
    "eslint": "^8.46.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.5"
}
